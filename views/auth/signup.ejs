<%- include('../partials/head') %>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col">
  
  <%- include('../partials/nav') %>

  <main class="flex flex-1 items-center justify-center px-4 mt-1 mb-1">
    
    <div class="bg-white w-full max-w-md p-8 rounded-2xl shadow-lg">
      
      <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">
        Create Your Account
      </h1>

      <form action="/auth/signup" method="POST" class="space-y-5">

        <%- include('../partials/errors') %>

        <div>
          <label for="firstName" class="block text-sm font-medium text-gray-700 mb-1">
            First Name
          </label>
          <input
            type="text"
            id="firstName"
            name="firstName"
            value="<%= oldInputs.firstName ? oldInputs.firstName : '' %>"
            placeholder="Enter your First Name"
            required
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400"
          />
        </div>

        <div>
          <label for="lastName" class="block text-sm font-medium text-gray-700 mb-1">
            Last Name
          </label>
          <input
            type="text"
            id="lastName"
            value="<%= oldInputs.lastName ? oldInputs.lastName : '' %>"
            name="lastName"
            placeholder="Enter your Last Name"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400"
          />
        </div>

        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
            Email
          </label>
          <input
            type="email"
            id="email"
            name="email"
            value="<%= oldInputs.email ? oldInputs.email : '' %>"
            placeholder="test@gmail.com"
            required
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400"
          />
        </div>

        <div>
          <label for="password" class="block text-sm font-medium text-gray-700 mb-1">
            Password
          </label>
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Enter your password"
            required
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400"
          />
        </div>

        <div>
          <label for="confirmPassword" class="block text-sm font-medium text-gray-700 mb-1">
            Confirm Password
          </label>
          <input
            type="password"
            id="confirmPassword"
            name="confirmPassword"
            placeholder="Confirm your password"
            required
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400"
          />
        </div>

        <div class="flex gap-6">
          <p class="text-sm font-medium text-gray-700 mb-1">User Type:</p>
          <label for="host" class="text-sm font-medium text-gray-700 mb-1">
          <input
            type="radio"
            id="host"
            name="userType"
            value="host"
            <%= oldInputs && oldInputs.userType === 'host' ? 'checked' : '' %>
            class="mr-2"
          /><span>Host</span>
          </label>
          <label for="guest" class="text-sm font-medium text-gray-700 mb-1">
          <input
            type="radio"
            id="guest"
            name="userType"
            value="guest"
            class="mr-2"
            <%= oldInputs && oldInputs.userType === 'guest' ? 'checked' : '' %>
            required
          /><span>Guest</span>
          </label>
        </div>

        <div class="text-sm font-medium text-gray-700 mb-1 flex gap-6">
          <input
            type="checkbox"
            id="terms"
            name="terms"
            required
          />
          <label for="terms">
            I agree to the terms and conditions
          </label>
        </div>

        <button
          type="submit"
          class="w-full bg-red-500 text-white py-2 rounded-lg font-semibold hover:bg-red-600 transition duration-300"
        >
          Sign Up
        </button>
      </form>

      <p class="text-sm text-center text-gray-600 mt-6">
        Already have an account?
        <a href="/auth/login" class="text-red-500 font-medium hover:underline">
          Login
        </a>
      </p>

    </div>

  </main>

</body>
</html>
