<%- include('../partials/head') %>
  </head>
  <body class="bg-gray-50">
    <%- include('../partials/nav') %>

    <!-- Hero Section -->
    <section class="bg-gradient-to-t from-red-600 to-red-400 text-white py-16 px-4">
      <div class="container mx-auto max-w-6xl">
        <h1 class="text-4xl md:text-5xl font-extrabold mb-4">Manage Your Homes</h1>
        <p class="text-xl text-red-50">Welcome back, host! View, edit, and manage all your listings from one dashboard.</p>
      </div>
    </section>

    <!-- Main Content -->
    <main class="container mx-auto max-w-6xl px-4 py-12">
      
      <!-- Header Section -->
      <div class="mb-12">
        <div class="flex justify-between items-center mb-4">
          <div>
            <h2 class="text-3xl md:text-4xl font-bold text-gray-800">Your Listings</h2>
            <p class="text-gray-600 mt-2">You have <span class="font-semibold text-red-600"><%= registeredHomes.length %></span> properties listed</p>
          </div>
          <a href="/host/add-home" class="bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-6 rounded-lg transition duration-200 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5"><path fill-rule="evenodd" d="M12 3.75a.75.75 0 01.75.75v6.75h6.75a.75.75 0 010 1.5h-6.75v6.75a.75.75 0 01-1.5 0v-6.75H4.5a.75.75 0 010-1.5h6.75V4.5a.75.75 0 01.75-.75z" clip-rule="evenodd" /></svg>
            Add New Home
          </a>
        </div>
        <div class="flex gap-2">
          <div class="h-1 w-16 bg-red-500 rounded"></div>
          <div class="h-1 w-8 bg-red-300 rounded"></div>
        </div>
      </div>

      <!-- Properties Grid -->
      <% if(registeredHomes.length > 0) { %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% registeredHomes.forEach(home => { %>
          <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition duration-300 transform hover:-translate-y-1 flex flex-col h-full">
            
            <!-- Image Container with Rating Badge -->
            <div class="relative overflow-hidden h-56 bg-gray-200">
              <img src="<%= home.photo %>" alt="<%= home.houseName %>" class="w-full h-full object-cover hover:scale-110 transition-transform duration-300">
              <div class="absolute top-4 right-4 bg-white rounded-full px-3 py-1 shadow-md flex items-center gap-1">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4 text-yellow-400">
                  <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
                </svg>
                <span class="text-sm font-semibold text-gray-800"><%= home.rating %></span>
              </div>
            </div>

            <!-- Card Content -->
            <div class="p-6 flex flex-col flex-grow">
              
              <!-- Title -->
              <h3 class="text-xl font-bold text-gray-800 mb-2 line-clamp-2">
                <%= home.houseName %>
              </h3>
              
              <!-- Location -->
              <div class="flex items-center text-gray-600 mb-4 text-sm">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4 text-red-500 mr-2">
                  <path fill-rule="evenodd" d="m11.54 22.351.07.04.028.016a.75.75 0 00.723 0l.028-.015.071-.041a60.856 60.856 0 003.738-2.747 59.5 59.5 0 005.92-6.3 60.75 60.75 0 002.88-7.773 60.978 60.978 0 00.006-8.071 60.852 60.852 0 00-2.884-7.768 60.906 60.906 0 00-5.92-6.299 60.864 60.864 0 00-3.738-2.747A.75.75 0 0012 .75a.75.75 0 00-.722.016l-.028.015-.071.041A60.853 60.853 0 007.51 2.96a59.5 59.5 0 00-5.92 6.3 60.75 60.75 0 00-2.88 7.773 60.978 60.978 0 00-.006 8.071 60.852 60.852 0 002.884 7.768 60.906 60.906 0 005.92 6.299 60.864 60.864 0 003.738 2.747zM12 16.5a4.5 4.5 0 100-9 4.5 4.5 0 000 9z" clip-rule="evenodd" />
                </svg>
                <%= home.location %>
              </div>

              <!-- Description -->
              <p class="text-gray-600 text-sm mb-4 line-clamp-2 flex-grow">
                <%= home.description %>
              </p>

              <!-- Price Section -->
              <div class="border-t border-gray-200 pt-4 mb-6">
                <p class="text-gray-500 text-xs mb-1">Price per night</p>
                <p class="text-2xl font-bold text-red-500">
                  Rs<%= home.price %>
                </p>
              </div>

              <!-- Action Buttons -->
              <div class="flex gap-3">
                <a 
                  href="/host/edit-home/<%= home._id %>?editing=true" 
                  class="flex-1 bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition duration-200 text-center flex items-center justify-center gap-2"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4"><path d="M3 17.25V21h3.75L17.81 9.94m-6.75-6.75L21 3m0 0l-3.75-3.75m3.75 3.75L7.5 17.25" /></svg>
                  Edit
                </a>
                <form action="/host/delete-home/<%= home._id %>" method="POST" class="flex-1">
                  <button type="submit" class="w-full bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-lg transition duration-200 flex items-center justify-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4"><path fill-rule="evenodd" d="M16.5 4.478v.227a48.816 48.816 0 013.878.512.75.75 0 11-.256 1.478m-3.622 0a48.844 48.844 0 01-5.604 0m3.622 0a48.844 48.844 0 015.604 0m-7.288 0c.57.047 1.14.06 1.713.06 1.573 0 3.129-.233 4.632-.697a.75.75 0 10-.440-1.437A47.394 47.394 0 0012 4.75c-.573 0-1.142-.013-1.713-.06a.75.75 0 10-.44 1.437zM15 6.75a.75.75 0 00-1.5 0v2.513l-.22-.220a.75.75 0 10-1.06 1.061l3.5 3.5a.75.75 0 001.06 0l3.5-3.5a.75.75 0 10-1.06-1.061l-.22.22V6.75z" clip-rule="evenodd" /></svg>
                    Delete
                  </button>
                </form>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
      <% } else { %>
        <!-- Empty State -->
        <div class="text-center py-16">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-3m0 0l7-4 7 4M5 9v10a1 1 0 001 1h12a1 1 0 001-1V9m-9 4l4 2m-2-2l-4-2" />
          </svg>
          <h3 class="text-2xl font-bold text-gray-800 mb-2">No Properties Yet</h3>
          <p class="text-gray-600 mb-6">Start building your host portfolio by adding your first property</p>
          <a href="/host/new" class="inline-block bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-8 rounded-lg transition duration-200">
            Add Your First Property
          </a>
        </div>
      <% } %>

    </main>

    <!-- Footer Section -->
    <%- include('../partials/footer') %>

  </body>
</html>