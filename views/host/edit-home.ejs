<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto mt-8 p-8 bg-white rounded-lg shadow-md min-h-screen">
      <h1 class="text-3xl font-bold mb-6 text-center text-gray-800"><%= editing ? 'Edit' : 'Register'%> Your Home on AirBnB</h1>
      <form action="/host/<%= editing ? 'edit-home' : 'add-home' %>" enctype="multipart/form-data" method="POST" class="max-w-md mx-auto">
        <input type="hidden" name="id" value="<%= editing ? home._id : '' %>">
        <input
          type="text"
          value="<%= editing ? home.houseName : '' %>"
          name="houseName"
          required
          placeholder="Enter your House Name"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
        />
        <input
          type="text"
          value="<%= editing ? home.price : '' %>"
          name="price"
          required
          placeholder="Price Per Night"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
        />
        <input
          type="text"
          value="<%= editing ? home.location : '' %>"
          name="location"
          required
          placeholder="Location"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
        />
        <input
          type="text"
          value="<%= editing ? home.rating : '' %>"
          name="rating"
          required
          placeholder="Rating"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
        />
        <input
          type="file"
          name="photo"
          accept="image/jpg, image/jpeg, image/png"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
        />
        <textarea
          name="description"
          placeholder="Describe your home"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
        ><%= editing ? home.description : '' %></textarea>

        <input type="submit" value="<%= editing ? 'Update Home' : 'Register Home' %>" class="w-full bg-red-500 text-white py-2 rounded-md hover:bg-red-600 transition duration-300" />
      </form>
    </main>
  </body>
</html>