<%- include('../partials/head') %>
</head>
<body class="bg-gray-50">
  <%- include('../partials/nav') %>

  <!-- Hero Section -->
  <div class="bg-gradient-to-t from-red-600 to-red-400 text-white py-16 px-4">
    <div class="container mx-auto max-w-6xl">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        Find Your Perfect Stay
      </h1>
      <p class="text-xl text-red-50 mb-2">
        Discover exceptional homes and unforgettable experiences with our curated collection
      </p>
      <p class="text-red-100">
        Browse through <%= registeredHomes.length %> amazing properties available for your next adventure
      </p>
    </div>
  </div>

  <!-- Main Content -->
  <main class="container mx-auto max-w-6xl px-4 py-12">
    
    <!-- Featured Section Header -->
    <div class="mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-2">
        Available Properties
      </h2>
      <p class="text-gray-600 text-lg">
        Explore our selection of premium accommodations carefully vetted for comfort and quality
      </p>
      <div class="flex gap-2 mt-4">
        <div class="h-1 w-16 bg-red-500 rounded"></div>
        <div class="h-1 w-8 bg-red-300 rounded"></div>
      </div>
    </div>

    <!-- Properties Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-16">
      <% registeredHomes.forEach(home => { %>
        <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition duration-300 transform hover:-translate-y-1 flex flex-col h-full">
          
          <!-- Image Container -->
          <div class="relative overflow-hidden h-56 bg-gray-200">
            <img 
              src="<%= home.photo %>" 
              alt="<%= home.houseName %>" 
              class="w-full h-full object-cover hover:scale-110 transition duration-300"
            >
            <div class="absolute top-4 right-4 bg-white rounded-full px-3 py-1 shadow-md">
              <div class="flex items-center gap-1">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4 text-yellow-400">
                  <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
                </svg>
                <span class="text-sm font-semibold text-gray-800"><%= home.rating %></span>
              </div>
            </div>
          </div>

          <!-- Card Content -->
          <div class="p-5 flex flex-col flex-grow">
            
            <!-- Title -->
            <h3 class="text-xl font-bold text-gray-800 mb-1 line-clamp-2">
              <%= home.houseName %>
            </h3>
            
            <!-- Location -->
            <div class="flex items-center text-gray-600 mb-3 text-sm">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4 text-red-500 mr-2">
                <path fill-rule="evenodd" d="m11.54 22.351.07.04.028.016a.75.75 0 00.723 0l.028-.015.071-.041a60.856 60.856 0 003.738-2.747 59.5 59.5 0 005.92-6.3 60.75 60.75 0 002.88-7.773 60.978 60.978 0 00.006-8.071 60.852 60.852 0 00-2.884-7.768 60.906 60.906 0 00-5.92-6.299 60.864 60.864 0 00-3.738-2.747A.75.75 0 0012 .75a.75.75 0 00-.722.016l-.028.015-.071.041A60.853 60.853 0 007.51 2.96a59.5 59.5 0 00-5.92 6.3 60.75 60.75 0 00-2.88 7.773 60.978 60.978 0 00-.006 8.071 60.852 60.852 0 002.884 7.768 60.906 60.906 0 005.92 6.299 60.864 60.864 0 003.738 2.747zM12 16.5a4.5 4.5 0 100-9 4.5 4.5 0 000 9z" clip-rule="evenodd" />
              </svg>
              <%= home.location %>
            </div>

            <!-- Description -->
            <p class="text-gray-600 text-sm mb-4 line-clamp-2 flex-grow">
              <%= home.description || 'Comfortable accommodation with modern amenities' %>
            </p>

            <!-- Price Section -->
            <div class="border-t border-gray-200 pt-4 mb-4">
              <div class="flex justify-between items-end">
                <div>
                  <p class="text-gray-500 text-xs mb-1">Starting from</p>
                  <p class="text-2xl font-bold text-red-500">
                    Rs<%= home.price %>
                    <span class="text-sm text-gray-600 font-normal">/night</span>
                  </p>
                </div>
              </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex gap-3">
              <a 
                href="<%= isLoggedIn ? '/bookings' : '/auth/login' %>" 
                class="text-center flex-1 bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded-lg transition duration-200 text-sm"
              >
                Book Now
              </a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>

    <!-- Empty State (if no homes) -->
    <% if(registeredHomes.length === 0) { %>
      <div class="text-center py-16">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-3m0 0l7-4 7 4M5 9v10a1 1 0 001 1h12a1 1 0 001-1V9m-9 4l4 2m-2-2l-4-2" />
        </svg>
        <h3 class="text-2xl font-bold text-gray-800 mb-2">No Properties Available</h3>
        <p class="text-gray-600 mb-6">We'll have exciting new listings coming soon!</p>
        <a href="/" class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-6 rounded-lg transition duration-200">
          Return Home
        </a>
      </div>
    <% } %>

  </main>

  <!-- Footer Section -->
  <%- include('../partials/footer') %>

</body>
</html>