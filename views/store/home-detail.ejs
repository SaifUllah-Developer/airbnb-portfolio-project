<%- include('../partials/head') %>
</head>
<body class="bg-gray-50">
  <%- include('../partials/nav') %>

  <main class="container mx-auto px-4 max-w-6xl py-10">
    <!-- Image Gallery Hero -->
    <div class="mb-8 rounded-2xl overflow-hidden shadow-lg">
      <img 
        src="<%= home.photo %>" 
        alt="<%= home.houseName %>"
        class="w-full h-96 object-cover hover:scale-105 transition duration-300"
      />
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2">
        <!-- Header Section -->
        <div class="bg-white rounded-2xl shadow-md p-8 mb-6">
          <div class="mb-4">
            <h1 class="text-4xl font-extrabold text-gray-900 mb-2">
              <%= home.houseName %>
            </h1>
            <div class="flex flex-wrap gap-4 items-center text-sm">
              <p class="text-gray-700 flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-red-500 mr-2">
                  <path fill-rule="evenodd" d="m11.54 22.351.07.04.028.016a.75.75 0 00.723 0l.028-.015.071-.041a60.856 60.856 0 003.738-2.747 59.5 59.5 0 005.92-6.3 60.75 60.75 0 002.88-7.773 60.978 60.978 0 00.006-8.071 60.852 60.852 0 00-2.884-7.768 60.906 60.906 0 00-5.92-6.299 60.864 60.864 0 00-3.738-2.747A.75.75 0 0012 .75a.75.75 0 00-.722.016l-.028.015-.071.041A60.853 60.853 0 007.51 2.96a59.5 59.5 0 00-5.92 6.3 60.75 60.75 0 00-2.88 7.773 60.978 60.978 0 00-.006 8.071 60.852 60.852 0 002.884 7.768 60.906 60.906 0 005.92 6.299 60.864 60.864 0 003.738 2.747zM12 16.5a4.5 4.5 0 100-9 4.5 4.5 0 000 9z" clip-rule="evenodd" />
                </svg>
                <%= home.location %>
              </p>
              <div class="flex items-center gap-1 bg-yellow-50 px-3 py-1 rounded-lg">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-yellow-400">
                  <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
                </svg>
                <span class="font-semibold text-gray-800"><%= home.rating %> Excellent</span>
              </div>
            </div>
          </div>
        </div>

        <!-- About Section -->
        <div class="bg-white rounded-2xl shadow-md p-8 mb-6">
          <h2 class="text-2xl font-bold text-gray-900 mb-4">About This Home</h2>
          <p class="text-gray-700 leading-relaxed text-lg">
            <%= home.description || 'This beautiful home offers a comfortable stay with modern facilities. It is located in a prime area and is perfect for families, couples, or solo travelers looking for a peaceful experience.' %>
          </p>
        </div>

        <!-- Amenities Section -->
        <div class="bg-white rounded-2xl shadow-md p-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">What This Place Offers</h2>
          <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
            <div class="flex items-center gap-3">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 text-red-500">
                <path d="M11.47 3.84a.75.75 0 00-1.08.122l-3.991 4.991a.75.75 0 10.936 1.2l3.696-4.621.936 1.2a.75.75 0 00.68.368h1.408a.75.75 0 00.53-.22l6.32-6.32a.75.75 0 10-1.06-1.06L12.15 5.689V3.75a.75.75 0 00-.68-.91z" />
              </svg>
              <span class="text-gray-700 font-medium">Wifi</span>
            </div>
            <div class="flex items-center gap-3">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 text-red-500">
                <path d="M6.429 9.75L2.25 12m13.5-9.75l4.179 2.25m0 0a.75.75 0 00.75.75H21a.75.75 0 00.75-.75M2.25 12a.75.75 0 00-.75.75V15a.75.75 0 00.75.75H3.75m13.5-3h3.375a.75.75 0 00.75-.75V9m0 0l4.179-2.25m0 0a.75.75 0 015.25.75v6.5a.75.75 0 01-.75.75H20.25a.75.75 0 01-.75-.75v-6.5m0 0l-4.179-2.25m0 0L9.16 3.75m-6.911 6m6.911 0a.75.75 0 00-1.5 0m0 6.75a.75.75 0 001.5 0m0 0l4.179 2.25m0 0L9.16 21m-6.911-6m6.911 0a.75.75 0 001.5 0m0-6.75a.75.75 0 00-1.5 0m0 0L3.75 9" />
              </svg>
              <span class="text-gray-700 font-medium">Air Conditioning</span>
            </div>
            <div class="flex items-center gap-3">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 text-red-500">
                <path d="M11.584 2.376a.75.75 0 01.832 0l9 6a.75.75 0 11-.832 1.248L12 4.168l-8.584 5.456a.75.75 0 01-.832-1.248l9-6z" />
                <path fill-rule="evenodd" d="M20.25 12a.75.75 0 01.75.75v5.25a.75.75 0 01-1.5 0v-.836l-5.25-3.5a.75.75 0 011.5-2.25l5.25 3.5V12.75a.75.75 0 01.75-.75zM3.75 12a.75.75 0 01.75.75v3.75a3 3 0 003 3h9a3 3 0 003-3v-3.75a.75.75 0 011.5 0v3.75a4.5 4.5 0 01-4.5 4.5h-9a4.5 4.5 0 01-4.5-4.5v-3.75a.75.75 0 01.75-.75z" clip-rule="evenodd" />
              </svg>
              <span class="text-gray-700 font-medium">Kitchen</span>
            </div>
            <div class="flex items-center gap-3">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 text-red-500">
                <path fill-rule="evenodd" d="M7.5 6a4.5 4.5 0 119 0 4.5 4.5 0 01-9 0zM1.5 20.25a7.5 7.5 0 0115 0v.811c0 .735-.646 1.324-1.371 1.324a2.25 2.25 0 01-2.029-1.901 15.193 15.193 0 01-.348-4.649 6.751 6.751 0 00-7.905.584c-.75.72-1.837 2.075-2.416 4.59-.142.685-.911 1.227-1.605 1.227-.725 0-1.371-.589-1.371-1.323v-.811zM14.25 12a3.75 3.75 0 107.5 0 3.75 3.75 0 00-7.5 0z" clip-rule="evenodd" />
              </svg>
              <span class="text-gray-700 font-medium">Dedicated Space</span>
            </div>
            <div class="flex items-center gap-3">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 text-red-500">
                <path fill-rule="evenodd" d="M1.5 4.5a3 3 0 013-3h1.372c.86 0 1.61.586 1.819 1.42l1.105 4.955a1.5 1.5 0 01-.727 1.573l-2.203 1.102a11.002 11.002 0 005.016 5.009l1.102-2.205a1.5 1.5 0 011.573-.727l4.955 1.105c.834.209 1.42.959 1.42 1.819V19.5a3 3 0 01-3 3h-2.25A8.97 8.97 0 003.75 20.25H1.5a3 3 0 01-3-3V4.5z" clip-rule="evenodd" />
              </svg>
              <span class="text-gray-700 font-medium">24/7 Support</span>
            </div>
            <div class="flex items-center gap-3">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 text-red-500">
                <path d="M12 7.5a2.25 2.25 0 100-4.5 2.25 2.25 0 000 4.5z" />
                <path fill-rule="evenodd" d="M1.5 4.875C1.5 3.839 2.34 3 3.375 3h2.812c.844 0 1.469.533 1.844 1.59.327.88.601 1.765.861 2.611.08.244.243.469.485.565A49.255 49.255 0 0112 11.25c1.302 0 2.573-.04 3.823-.12.242-.096.405-.321.485-.565.26-.846.534-1.731.861-2.611.375-1.057 1-1.59 1.844-1.59h2.812c1.035 0 1.875.84 1.875 1.875v12.75c0 1.035-.84 1.875-1.875 1.875H3.375A1.875 1.875 0 011.5 17.625V4.875zM11.1 16.4a1.1 1.1 0 11-2.2 0 1.1 1.1 0 012.2 0z" clip-rule="evenodd" />
              </svg>
              <span class="text-gray-700 font-medium">Free Cancellation</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="lg:col-span-1">
        <!-- Pricing Card -->
        <div class="bg-white rounded-2xl shadow-md p-6 sticky top-24 mb-6">
          <div class="mb-6">
            <p class="text-gray-600 text-sm mb-1">Price per night</p>
            <p class="text-4xl font-extrabold text-red-500">
              Rs <%= home.price %>
            </p>
          </div>
          <a href="/bookings" class="bg-green-600 hover:bg-green-700 text-white px-4 py-3 rounded-lg font-bold transition ">
            Book Now
          </a>
          <a href="/homes" class="w-full block text-center bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-3 rounded-xl transition duration-200 mt-5">
            Back to Browse
          </a>
        </div>

        <!-- Quick Info -->
        <div class="bg-white rounded-2xl shadow-md p-6">
          <h3 class="text-lg font-bold text-gray-900 mb-4">Quick Info</h3>
          <div class="space-y-3 text-sm">
            <div class="flex justify-between">
              <span class="text-gray-600">Status</span>
              <span class="font-semibold text-green-600">Available</span>
            </div>
            <div class="border-t pt-3 flex justify-between">
              <span class="text-gray-600">Guest Reviews</span>
              <span class="font-semibold text-gray-800"><%= home.rating %>/5.0</span>
            </div>
            <div class="border-t pt-3">
              <p class="text-gray-600 mb-2">Favorites</p>
              <%- include('../partials/favourites')%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</body>
</html>
