<%- include('../partials/head') %>
</head>
<body class="bg-gray-50">
  <%- include('../partials/nav') %>

  <!-- Hero Section -->
  <section class="bg-gradient-to-t from-red-600 to-red-400 text-white py-10">
    <div class="container mx-auto max-w-6xl px-4">
      <h1 class="text-3xl md:text-4xl font-extrabold">Your Favorite Homes</h1>
      <p class="mt-2 text-red-100">Curated collection of properties you love â€” ready to book anytime.</p>
    </div>
  </section>

  <main class="container mx-auto max-w-6xl px-4 py-12">
    <% if(favouriteHomes && favouriteHomes.length > 0) { %>
      <div class="mb-8">
        <h2 class="text-2xl font-semibold text-gray-800">Saved Properties</h2>
        <p class="text-gray-600 mt-1">You have <strong class="text-red-600"><%= favouriteHomes.length %></strong> favorite <%= favouriteHomes.length === 1 ? 'home' : 'homes' %>.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
        <% favouriteHomes.forEach(home => { %>
          <article class="bg-white rounded-xl shadow-sm overflow-hidden flex flex-col h-full hover:shadow-md transition transform hover:-translate-y-1">
            <div class="relative h-48 bg-gray-200 overflow-hidden">
              <img src="<%= home.photo %>" alt="<%= home.houseName %>" class="w-full h-full object-cover transition-transform duration-300 hover:scale-105">
              <div class="absolute left-3 bottom-3 bg-white/90 px-3 py-1 rounded-md text-sm font-medium text-gray-800 shadow">Rs<%= home.price %> / night</div>
              <div class="absolute right-3 top-3 bg-white rounded-full px-2 py-1 shadow text-sm text-gray-800 flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4 text-yellow-400 mr-1">
                  <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
                </svg>
                <span><%= home.rating %></span>
              </div>
            </div>

            <div class="p-4 flex flex-col flex-grow">
              <h3 class="text-lg font-semibold text-gray-800 mb-1 line-clamp-2"><%= home.houseName %></h3>
              <p class="text-gray-600 text-sm mb-3 flex items-center"><i class="fas fa-map-marker-alt mr-2 text-gray-400"></i><%= home.location %></p>
              <p class="text-gray-600 text-sm mb-4 line-clamp-2 flex-grow"><%= home.description || 'Comfortable accommodation with modern amenities.' %></p>

              <div class="flex gap-3">
                <a href="/bookings%>" class="flex-1 bg-blue-600 hover:bg-blue-700 text-white text-center py-2 rounded-lg font-semibold text-sm">Book Now</a>
                <form action="/remove-favourite/<%= home._id %>" method="POST" class="flex-1">
                  <button type="submit" class="w-full bg-red-600 hover:bg-red-700 text-white py-2 rounded-lg font-semibold text-sm">Remove</button>
                </form>
              </div>
            </div>
          </article>
        <% }) %>
      </div>
    <% } else { %>
      <!-- Empty State -->
      <div class="text-center py-20">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-20 h-20 mx-auto text-gray-300 mb-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.5 12a7.5 7.5 0 0015 0m-15 0a7.5 7.5 0 1115 0m-15 0H3m16.5 0H21m-1.5-6a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
        <h2 class="text-3xl font-bold text-gray-800 mb-2">No Favorites Yet</h2>
        <p class="text-gray-600 mb-8 max-w-md mx-auto">Start saving your favorite homes to build a personalized collection of properties you love.</p>
        <a href="/homes" class="inline-block bg-red-500 hover:bg-red-600 text-white font-bold py-3 px-8 rounded-lg transition duration-200">
          Explore Homes
        </a>
      </div>
    <% } %>
  </main>

  <!-- Footer -->
  <%- include('../partials/footer') %>

</body>
</html>